<%- include('../partials/header') %>

<div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Verify Bank Account Details</h1>
    <p class="text-gray-600 mb-8">Enter the invoice number to verify the bank account details.</p>
    
    <form action="/verify" method="GET" class="space-y-6">
        <div>
            <label for="invoice_number" class="block text-sm font-medium text-gray-700 mb-1">Invoice Number</label>
            <input 
                type="text" 
                id="invoice_number" 
                name="invoice_number" 
                value="<%= typeof formData !== 'undefined' ? formData.invoice_number || '' : '' %>"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="e.g., INV-2023-001"
            >
        </div>
        
        <div>
            <button 
                type="submit" 
                class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
            >
                Verify Invoice
            </button>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>

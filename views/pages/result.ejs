<%- include('../partials/header') %>

<div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md p-8">
    <div class="mb-8 text-center">
        <% if (verified) { %>
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-green-600 mb-2">Verification Successful</h2>
            <p class="text-gray-600">The bank details for this invoice have been verified.</p>
        <% } else { %>
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 mb-4">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-red-600 mb-2">Verification Failed</h2>
            <p class="text-gray-600">The invoice number could not be found or is not yet registered.</p>
        <% } %>
    </div>

    <% if (invoice) { %>
        <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Invoice Details</h3>
            <dl class="space-y-4">
                <div class="sm:grid sm:grid-cols-3 sm:gap-4">
                    <dt class="text-sm font-medium text-gray-500">Invoice Number</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= invoice.invoice_number %></dd>
                </div>
                <div class="sm:grid sm:grid-cols-3 sm:gap-4">
                    <dt class="text-sm font-medium text-gray-500">Bank Name</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= invoice.bank_name %></dd>
                </div>
                <div class="sm:grid sm:grid-cols-3 sm:gap-4">
                    <dt class="text-sm font-medium text-gray-500">Account Number</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 font-mono"><%= invoice.bank_account_number %></dd>
                </div>
                <% if (invoice.beneficiary_name) { %>
                    <div class="sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">Beneficiary</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= invoice.beneficiary_name %></dd>
                    </div>
                <% } %>
                <div class="sm:grid sm:grid-cols-3 sm:gap-4">
                    <dt class="text-sm font-medium text-gray-500">Verified On</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:col-span-2">
                        <%= new Date(invoice.verified_at || new Date()).toLocaleDateString() %>
                    </dd>
                </div>
            </dl>
        </div>
    <% } %>

    <div class="mt-8 text-center">
        <a 
            href="/" 
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Back to Home
        </a>
    </div>
</div>

<%- include('../partials/footer') %>
